# ================================
# Docker Compose Environment Variables
# ================================
# SECURITY WARNING: Copy this to .env and update with actual values
# NEVER commit .env file to git!
# ================================

# Database Configuration
DATABASE_NAME=generator_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_database_password

# JWT Configuration
# Generate: openssl rand -base64 64
JWT_SECRET=YourSuperSecretKeyForJWTGenerationPleaseChangeInProduction
JWT_EXPIRATION=86400000

# MQTT Broker Configuration (optional authentication)
MOSQUITTO_PORT=1883
MOSQUITTO_USERNAME=
MOSQUITTO_PASSWORD=

# Email Configuration
# Gmail App Password: https://support.google.com/accounts/answer/185833
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_FROM=noreply@generator-monitoring.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# Frontend URLs (for production, use actual domain)
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=http://localhost/ws

# NGINX Port
NGINX_PORT=80

# Spring Profile
SPRING_PROFILES_ACTIVE=prod
